<link rel='stylesheet' href='/stylesheets/login/login.css'>
<form action="/login" method="POST">

    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" value="partner" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" value="1234" required>

    <button type="submit">Login</button>
    <br>
    <br>
    <br>
    {{#if errorMessage }}
    <div>{{ errorMessage }}</div>
    {{/if}}
    <br>

    <p>
        Don't have an account? <a href="/signup">Sign up</a>
    </p>
</form>