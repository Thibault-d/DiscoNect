<link rel='stylesheet' href='/stylesheets/artists/details.css'>
<div class="artist-container">
    <img src={{this.details.images.[2].url}} alt="">
    <div class="artist-details">
        <p>
            <h1>{{this.details.name}}</h1> Popularity: {{this.details.popularity}}%
        </p>
        <br>
        <div class="categories-container">
            {{#each genre}}
            <div class="categories">
                {{this}}
            </div>
            {{/each}}
        </div>
    </div>
</div>

<h2>Top songs</h2>
<div class="tracks-container">
    {{#each tracks}}
    <div class="tracks">
        {{this.name}}
        <audio controls id="track-audio">
            <source src="{{this.preview_url}}" type="audio/ogg">
        </audio>
    </div>
    {{/each}}
</div>

<h2> Upcoming events</h2>
<div class="event-container">
    <p>{{this.empty}}</p>
    {{#each event}}
    <div class="event">
        <p>
            <h3>{{this.name}}</h3>
        </p>
        <p> {{this.place}}</p>
        <p><img src="/img/calendar.png" alt="">
            {{this.date}}</p>
        <p> {{this.description}}</p>
        <p> <a class="btn" href="/venues/tickets/{{this._id}}">Buy Tickets</a></p>
    </div>
    {{/each}}
</div>