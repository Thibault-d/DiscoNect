</section>

<section class="sectionMap">
    <div id="map" class="map">
        <script>
            mapboxgl.accessToken = 'pk.eyJ1IjoidGhpYmF1bHQtZGVsIiwiYSI6ImNrN3J2ZGFpbzBhMzczb21ycjNtamxjbmEifQ.H4jzajdc30ChH2RYLtkCzQ';
            var map = new mapboxgl.Map({
